{
  "env": {
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "strict": "error",
    "no-trailing-spaces": "error",
    "block-spacing": ["error", "always"],
    "space-before-function-paren": ["error", "always"],
    "func-call-spacing": ["error", "always"]
  },
  "ignorePatterns": ["global.d.ts"]
}
